<h3><p>Редактирование партнера :<%= @partner.id %></h3>

<%= form_for(@partner) do |f| %>
  <div class="field">
    <%= f.label "Url" %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label "description" %><br />
    <%= f.text_area :description, :size=>"25x3" %>
  </div>
  <div class="field">
    <%= f.label "regex" %><br />
    <%= f.text_field :regex , :disabled => 'disabled' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', partners_path %>

